# create dir structure on state
sp {create*dir*structure
   (state <s> ^superstate nil)
-->
   (<s> ^dir <dir>)
}
gp {reference*dirs
   (state <s> ^superstate nil
              ^dir <dir>)
-->
   (<dir> ^[north east] <step>)
   (<step> ^from [-3 -2 -1 0 1 2 3 4])
}
sp {elaborate*vectors
   (state <s> ^superstate nil
              ^dir.<< north east >> (<dir> ^from <from>))
-->
   (<dir> ^to (+ 1 <from>))
}