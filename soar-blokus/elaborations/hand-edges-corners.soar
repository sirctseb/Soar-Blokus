
# elaborate squares if their sides are edges of the block
sp {north*edge
   (state <s> ^hand.block.orientation <o>)
   (<o> ^square (<edge> ^x <x> ^y <y>))
   (<s> ^north (^from <y> ^to <new-y>))
  -(<o> ^square (^x <x> ^y <new-y>))
-->
   (<edge> ^edge north)
}
sp {east*edge
   (state <s> ^hand.block.orientation <o>)
   (<o> ^square (<edge> ^x <x> ^y <y>))
   (<s> ^east (^from <x> ^to <new-x>))
  -(<o> ^square (^x <new-x> ^y <y>))
-->
   (<edge> ^edge east)
}
sp {south*edge
   (state <s> ^hand.block.orientation <o>)
   (<o> ^square (<edge> ^x <x> ^y <y>))
   (<s> ^north (^from <new-y> ^to <y>))
  -(<o> ^square (^x <x> ^y <new-y>))
-->
   (<edge> ^edge south)
}
sp {west*edge
   (state <s> ^hand.block.orientation <o>)
   (<o> ^square (<edge> ^x <x> ^y <y>))
   (<s> ^east (^from <new-x> ^to <x>))
  -(<o> ^square (^x <new-x> ^y <y>))
-->
   (<edge> ^edge west)
}
# elaborate squares if their corners are convex corners of the block
sp {northwest*corner
   (state <s> ^hand.block.orientation.square(<corner> ^edge north west))
-->
   (<corner> ^corner nw)
}
sp {northeast*corner
