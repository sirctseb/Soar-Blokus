# make one square blue
sp {elaborate*make*blue*square
   (state <s> ^board.square (<square> ^x 0 ^y 0))
-->
   (<square> ^color none -
              ^color blue)
}
# make one square yellow
sp {elaborate*make*yellow*square
   (state <s> ^board.square (<square> ^x 2 ^y 0))
-->
   (<square> ^color none -
             ^color yellow)
}
# make two green squares
sp {elaborate*make*green*squares
   (state <s> ^board.square <sq1> <sq2>)
   (<sq1> ^x 0 ^y 2)
   (<sq2> ^x 1 ^y 2)
-->
   (<sq1> ^color none -
          ^color green)
   (<sq2> ^color none -
          ^color green)
}